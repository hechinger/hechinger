<figure class="media-mod img-container {{ class ? class : '' }}">
  <div class="img-container-inner">
    <img srcset="{{ image.srcset(image.width) }}" sizes="(min-width: 550px) 40vw, 100vw" src="{{ image.src | max_width(800) }}" alt="{{ image.alt|e }}">
  </div> <!-- /img-container-inner -->
  <figcaption class="img-caption">
    <p class="img-caption-text">
      {{ image.caption }}
      {% if image.credit %}
        <span class="img-byline">{{ image.credit }}</span>
      {% endif %}
    </p>
  </figcaption> <!-- article-img-caption -->
</figure> <!-- /media-mod -->
