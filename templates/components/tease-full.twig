<div class="tz-full-mod">
  <div class="tz-content-wrap {{ post.thumbnail ? 'l-pair-full' }}">

    <div class="art-bd">
      {% if post.thumbnail %}
        <figure class="tz-full-img-wrap">
          <a href="{{ post.link }}"><img class="tz-full-img" src="{{ post.thumbnail.src | resize(250, 167) }}" alt="{{ post.thumbnail.alt }}" /></a>
        </figure>
      {% endif %}
    </div>

    <div class="txt-bd">
      <h1 class="tz-full-title"><a class="tz-full-text-link" href="{{ post.link }}">{{ post.title }}</a></h1>
      {% if post.tease_excerpt %}
        <p class="tz-full-text"><a class="tz-full-text-link" href="{{ post.link }}">{{ post.tease_excerpt }}</a></p>
      {% endif %}
      <div class="tz-full--byline-wrap">
        <h2 class="tz-full--byline-topic"><a class="tz--byline-topic-link" href="{{ post.overline.link }}">{{ post.overline }}</a></h2>
        <h3 class="tz-full--byline-name">by <a class="tz--byline-author-link" href="{{ post.author.link }}">{{ post.author.name }}</a><span class="tz-full--byline-date">&nbsp;{{ post.date }}</span></h3>
      </div>
    </div>

  </div> <!-- /tz-content-wrap -->
</div> <!-- /tz-full-mod -->
