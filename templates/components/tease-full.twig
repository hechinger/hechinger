<div class="tz-full-mod">
  <div class="tz-content-wrap {{ post.thumbnail ? 'l-pair-full' }}">

    {% if post.thumbnail %}
      <div class="art-bd">
        <figure class="tz-full-img-wrap">
          <a href="{{ post.link }}"><img class="tz-full-img" src="{{ post.thumbnail.src | resize(250, 167) }}" alt="{{ post.thumbnail.alt }}" /></a>
        </figure>
      </div>
    {% endif %}

    <div class="txt-bd">
      <h1 class="tz-full-h">
        <a class="tz-full-h-link" href="{{ post.link }}">{{ post.title|striptags }}</a>
      </h1>

      {% if post.tease_excerpt %}
        <p class="tz-full-text">{{ post.tease_excerpt }}</p>
      {% endif %}

      <div class="tz-full--byline-wrap">
        <h2 class="tz-full--byline-topic">
          <a class="tz--byline-topic-link" href="{{ post.overline.link }}">{{ post.overline }}</a>
        </h2>
        <h3 class="tz-full--byline-name">by&nbsp;
          {% for author in post.coauthors %}
            <a class="tz--byline-author-link" href="{{ author.link }}">{{ author.name }}</a>
            {% if not loop.last %}
              &nbsp;and&nbsp;
            {% endif %}
          {% endfor %}
          <span class="tz-full--byline-date">&nbsp;&ndash;&nbsp;{{ post.date }}</span>
        </h3>
      </div> <!-- /tz-full--byline-name -->
    </div> <!-- /txt-bd -->

  </div> <!-- /tz-content-wrap -->
</div> <!-- /tz-full-mod -->

