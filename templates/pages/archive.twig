{% extends 'layout.twig' %}

{% block navbar %}
  {% include 'components/nav-bar.twig' %}
{% endblock %}


{# archive page layouts go here #}
{% block body %}

  {% block header %}
    <header class="l-archive-hdr-wrap l-page-hdr">
      <h1 class="archive-hdr">{{ title }}</h1>
    </header>
  {% endblock header %}

  {% block feed %}
    <section class="archive-feed-container">
      {# for each article in articles include tease component #}
      {% for post in posts %}
        {% if loop.index == 4 and promos %}
          {% include 'components/promo-report.twig' with { promo: random(promos) } %}
        {% endif %}
        {% if loop.index == 8 %}
          {% include 'components/promo-donate.twig' %}
        {% endif %}
        {% if post.is_feature %}
          {% include 'components/tease-archive-feat.twig' %}
        {% else %}
          {% include 'components/tease-full.twig' %}
        {% endif %}
      {% endfor %}
    </section>

    {% if pagination.pages|length %}
      {% include "/templates/components/pagination.twig" %}
    {% endif %}

  {% endblock feed %}


{% endblock body %}

{% block scripts %}{% endblock %}
