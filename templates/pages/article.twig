      <!-- article-tag -->
      {% block article_tag %}
        {% if post.story_tags|length %}
          <div class="page-mod">
            {% include "/templates/components/article-tags.twig" %}
          </div> <!-- /page-mod -->
        {% endif %}
      {% endblock %}  {# /article-tag #}

      <!-- article-bio -->
      {% block article_bio %}
        <div class="page-mod">
           <div class="article-bio">
            <div class="l-article-bio">

              {% if post.author.author_image %}
                <div class="art-bd">
                  <div class="img-rounded">
                    <a href="{{post.author.link }}">
                      <img src="{{ TimberImage(post.author.author_image).src|resize(200, 200) }}" alt="Photo of {{ post.author.name }}">
                    </a>
                  </div> <!-- img-rounded -->
                </div> <!-- /art-bd -->
              {% endif %}

              <div class="txt-bd">
                <h4 class="article-bio-h"><a class="article-bio-h-link" href="Photo of {{ post.author.name }}">{{ post.author.name }}</a></h4>
                <p class="article-bio-text">{{ post.author.description }}<a class="article-bio-link" href="/author/{{ post.author.slug }}">See Archive</a></p>
              </div> <!-- /txt-bd -->
            </div> <!-- /l-article-bio -->
          </div> <!-- /article-bio -->
        </div> <!-- /page-mod -->
      {% endblock %} {# /article_bio #}

