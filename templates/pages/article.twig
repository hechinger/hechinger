{% extends "layout.twig" %}
{% block body %}

  <!-- Article Layout -->
  <!-- ============================= -->


  <!-- article hdr -->
  {% block article_hdr %}

    {% if post.is_column %}
      {% include "/templates/components/article-header-column.twig" %}
    {% else %}
      {% include "/templates/components/article-header.twig" %}
    {% endif %}

  {% endblock %} {# /article_header #}

  <div class="l-content">
    <div class="l-content--inner">
      <article class="article-main">

        {% block article_partner %}
          {% if post.partner|length %}
            {% include "/templates/components/article-partner.twig" with { contextClass: 'article-aside-borders' } %}
          {% endif %}
        {% endblock %}

        {% block article_related %}
          {% if post.related_heading or post.post_related_aside %}
            {% include "/templates/components/article-aside-related.twig"  %}
          {% endif %}
        {% endblock %}

        {% block article_aside %}
          {% if post.post_asides|length %}
            {% for aside in post.post_asides %}
              {% include "/templates/components/article-aside.twig" with { aside: aside } %}
            {% endfor %}
          {% endif %}
        {% endblock %}

        <div class="article-body article-text">
          {{ post.content }}
        </div> <!-- /article-body -->

      </article> <!-- /article-main -->

      <!-- article-social -->
      {% block article_social %}
        <div class="page-mod article-mod">
          <div class="article-tools-btm-left">
            <a class="article-comment-link icon-disqus"  id="comment-trigger" href="#"><i class="icon"></i>
              <span class="article-comment-number">xxx</span> Comments</a>
          </div> <!-- /article-tool-btm-let -->

          <div class="article-tools-btm-right">
            {% include "/templates/components/article-social.twig" with {css_class: "social--with-name"} %}
          </div> <!-- /article-tools-btm-right -->
        </div> <!-- /page-mod -->
      {% endblock %} {# /article-social #}

      <!-- article-comments -->
      {% block article_comments %}
        <div class="page-mod article-mod" id="comment-mod">
          <div class="comment-inner">
            {% include "templates/components/disqus.twig" %}
          </div> <!-- /comment-inner -->
        </div> <!-- /page-mod -->
      {% endblock article_comments %}

      <!-- article-tag -->
      {% block article_tag %}
        {% if post.story_tags|length %}
          <div class="page-mod article-mod">
            {% include "/templates/components/article-tags.twig" %}
          </div> <!-- /page-mod -->
        {% endif %}
      {% endblock %}  {# /article-tag #}

      <!-- article-bio -->
      {% block article_bio %}
        <div class="page-mod article-mod">
           <div class="article-bio">
            <div class="l-article-bio">

              {% if post.author.author_image %}
                <div class="art-bd">
                  <div class="img-rounded">
                    <a href="{{ post.author.link }}">
                      <img src="{{ TimberImage(post.author.author_image).src|resize(200, 200) }}" alt="Photo of {{ post.author.name }}">
                    </a>
                  </div> <!-- img-rounded -->
                </div> <!-- /art-bd -->
              {% endif %}

              <div class="txt-bd">
                <h4 class="article-bio-h"><a class="article-bio-h-link" href="Photo of {{ post.author.name }}">{{ post.author.name }}</a></h4>
                <p class="article-bio-text">{{ post.author.description }}<a class="article-bio-link" href="/author/{{ post.author.slug }}">See Archive</a></p>
              </div> <!-- /txt-bd -->
            </div> <!-- /l-article-bio -->
          </div> <!-- /article-bio -->
        </div> <!-- /page-mod -->
      {% endblock %} {# /article_bio #}

    </div> <!-- /l-content-inner -->
  </div> <!-- /l-content -->

      <!-- article-recirculation -->
      <!-- ============================ -->
      {% block article_recirculation %}
      <div class="l-content">
        <div class="recirculation-container">
          <h4 class="section-hdr--lg">Read Next</h4>

          {% include "/templates/components/article-recirculation.twig" %}

        </div> <!-- /recirculation-container -->
      {% endblock %} {# /article_recirculation #}

  </div> <!-- /l-content -->

{% endblock %}


{% block scripts %}
  <script type="text/javascript" src="{{site.theme.uri}}/static/js/comment.js"></script>
{% endblock %}
