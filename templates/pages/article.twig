      <!-- article-recirculation -->
      <!-- ============================ -->
      {% block article_recirculation %}
      <div class="l-content">
        <div class="recirculation-container">
          <h4 class="section-hdr--lg">Read Next</h4>

          <!-- top area -->
          <div class="grid-container">
            <div class="l-grid-3--rules">
              {% for i in 1..3 %}
              <section class="grid-item">
                <div class="grid-test"></div>
              </section> <!-- /grid-item -->
              {% endfor %}
            </div> <!-- /l-grid-3 -->
          </div> <!-- /grid-container -->

          <!-- middle-area -->
          <div class="grid-container--rule">
            <h4 class="quote-h">"This is a big quote head for you to checkout right here"</h4>
            <h5 class="quote-sub-h">
              <a class="quote-link" href="#">xxxxx</a>
            </h5>
          </div>

          <!-- bottom-area -->
          <div class="grid-container--rule">
             <div class="l-grid-2--rules">
                <section class="grid-item">
                  <div class="grid-test"></div>
                </section> <!-- /grid-item -->

                <section class="grid-item">
                  <div class="hp-latest-mod">
                    <h4 class="hp-list-hdr">Latest News</h4>
                    <ul class="hp-list-items">
                      {% for i in 1..5 %}
                      <li class="hp-list-item">
                        <h3 class="hp-list-head">
                          <a class="hp-list-link" href="#">This is a Latest News headline on the homepage</a>
                        </h3>
                      </li> <!-- /hp-list-item -->
                      {% endfor %}
                      <li class="hp-list-item">
                        <h3 class="hp-list-head">
                          <a class="hp-list-link" href="#">This is a <span class="head-highlight">Latest News headline</span> on the homepage</a>
                        </h3>
                      </li> <!-- /hp-list-item -->
                    </ul> <!-- /hp-list-items -->
                  </div> <!-- /hp-latest-mod -->
                </section> <!-- /grid-item -->

              </div> <!-- /l-grid-2 -->
          </div> <!-- /grid-containter--rule -->

        </div> <!-- /recirculation-container -->
      {% endblock %} {# /article_recirculation #}

  </div> <!-- /l-content -->

