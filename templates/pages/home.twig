{% extends "layout.twig" %}


{% block navbar %}
  {% include 'components/nav-bar.twig' with {css_class: "site-header--hp"} %}
{% endblock %}


{% block body %}
  {#posts|print_r#}
  <div class="l-content">

    <!-- Homepage Zone 1 -->
    <!-- ===================================== -->
    {% block hp_zone1 %}
      <div class="l-hp-zone">

        <!-- hp main feature -->
        <div class="hp-feat-mod">
          {% include "/templates/components/tease-layout.twig" with { post: posts[0], context_class: 'feat-lg', css_class: post.lead_image ? 'tz-hp-feat--main tz-hp-feat--main-img' : 'tz-hp-feat--main' } %}
        </div>

        <!-- hp top -->
        <div class="hp-top-mod">
          <div class="l-hp-dos--rule">

            <!-- top featured stories -->
            <div class="grid-item">
              <div class="hp-top-feat-mod">
                {% for post in posts|slice(1, 2) %}
                  {% include "/templates/components/tease-hp-regular.twig" with { context_class: "reg-lg", css_class: 'tz-hp-reg' } %}
                {% endfor %}
              </div> <!-- /hp-zone1-feat-mod -->
            </div> <!-- /grid-item -->

            <!-- /latest news feed -->
            <div class="grid-item">
              {% if latest_posts|length %}
                {% include "/templates/components/tease-list-latest.twig" %}
              {% endif %}
            </div> <!-- /grid-item -->

          </div> <!-- /l-hp-dos--rule -->
        </div> <!-- /hp-latest-mod -->
      </div> <!-- /l-hp-zone -->

    {% endblock hp_zone1 %}


    <!-- Homepage Zone Special Reports -->
    <!-- ===================================== -->
    {% block hp_reports %}
      <div class="l-hp-zone l-hp-zone--reports">
        <div class="l-hp-dos">
          {% for report in special_reports %}
            {% if report.slug in ['california', 'common-core', 'higher-education', 'mississippi-learning'] %}
              <div class="grid-item">
                <div class="hp-special-tz">
                  {% include "templates/components/tease-hp-report.twig" with { report:report } %}
                </div> <!-- /hp-special-tz -->
              </div> <!-- /grid-item -->
            {% endif %}
          {% endfor %}
        </div> <!-- /l-hp-dos -->
      </div> <!-- l-hp-zone l-hp-zone--reports" -->
    {% endblock hp_reports %}


    <!-- Homepage Zone 2 -->
    <!-- ===================================== -->
    {% block hp_zone2 %}
      <div class="l-hp-zone">

        <!-- Zone 2 Top -->
        <div class="hp-zone--top">
          <div class="l-hp-tres--rule">
            {% for post in posts|slice(2,3) %}
              <div class="grid-item {{ loop.index > 1 ? 'sub-grid-item' }}">
                {% include "/templates/components/tease-hp-stub.twig" with { context_class: 'stub-lg', css_class: 'tz-hp-stub' } %}
              </div>
            {% endfor %}
          </div> <!-- /l-hp-tres -->
        </div> <!-- /hp-zone--top -->

        <!-- Zone 2 Middle -->
        <div class="hp-zone--middle">
          {% include "/templates/components/tease-special.twig" %}
        </div>

        <!-- Zone 2 Bottom -->
        <div class="hp-zone--bottom">
          <div class="l-hp-cuatro--rule">
            {% for post in posts|slice(5,4) %}
              <div class="grid-item">
                {% include "/templates/components/tease-hp-stub.twig" with {context_class: 'stub-med'} %}
              </div>
            {% endfor %}
          </div> <!-- /l-hp-tres -->
        </div> <!-- /hp-zone-bottom -->

      </div> <!-- /l-hp-zone -->
    {% endblock hp_zone2 %}


    <!-- Homepage Featured -->
    <!-- ===================================== -->
    {% block hp_zone_feat %}
      <div class="l-hp-zone l-hp-zone--feat">
        {% include "/templates/components/tease-hp-second-feat.twig" with { feature: second_feature } %}
      </div> <!-- /l-hp-zone--feat -->
    {% endblock hp_zone_feat %}


    <!-- Homepage Zone 3 -->
    <!-- ===================================== -->
    {% block hp_zone3 %}
      <div class="l-hp-zone">

        <!-- Zone 3 Top -->
        <div class="hp-zone--top">
            <div class="l-hp-dos--split">

              <!-- Zone 3 Top Left side -->
              <div class="top-grid-item top-grid-item--left">
                {% include "/templates/components/tease-hp-regular.twig" with { post: posts[9], context_class: 'reg-med'} %}
              </div> <!-- /top-grid-item -->

              <!-- Zone 3 Top Right side -->
              <div class="top-grid-item top-grid-item--right">
                <div class="l-hp-dos--split-inside">
                  {% for post in posts|slice(10,2) %}
                    <div class="grid-item">
                      {% include "/templates/components/tease-hp-regular.twig" with {context_class: 'reg-med'} %}
                    </div> <!-- /grid-item -->
                  {% endfor %}
                </div> <!-- /l-hp-dos--rule -->

                <div class="top-grid-item--right-lower">
                  {% include "/templates/components/tease-special.twig" %}
                </div> <!-- /grid-item-lower -->

              </div> <!-- /top-grid-item top-grid-item--right -->
            </div> <!--/l-hp-dos--split -->
        </div> <!-- /hp-zone--top -->

        <!-- Zone 3 Bottom -->
        <div class="hp-zone--bottom">
          <div class="l-hp-tres--rule">
            {% for post in posts|slice(12,3) %}
              <div class="grid-item {{ loop.index > 1 ? 'sub-grid-item' }}">
                {% include "/templates/components/tease-hp-regular.twig" with {context_class: 'reg-med'} %}
              </div>
            {% endfor %}
          </div> <!-- /l-hp-tres -->
        </div> <!-- /hp-zone--bottom -->

      </div> <!-- /l-hp-zone -->
    {% endblock hp_zone3 %}

  </div> <!-- /l-content -->

{% endblock body %}
