{% extends '/pages/staff.twig' %}

{% block header %}
    {% include 'components/section-front-header.twig' with { section_front_title : "Supporters", post: post, subhead: post.subhead, link_heading: post.link_heading, link_to_page: post.link_to_page } %}
  {% endblock header %}

{% block staff_content %}

  <div class="staff-content">
    <div class="l-content">
	<div style=" font-family: National, Helvetica, Arial, sans-serif; font-weight: 300; font-style: normal; font-size: 16px; text-decoration: none; color: #000000;">

      	<p style="font-size:20px; font-weight:bold;">Individual Donors</p><br /><br />
     
		<strong>Editor-in-Chief’s Circle—for gifts of $2,400 or more</strong><br /><br />
		Bob Howitt<br />
		Steve Mongeau and Janice Ruell<br /><br />
 	

		<strong>Executive Editor’s Circle—for gifts of $1,800 or more</strong><br /><br />
		Willen Family <br /><br /><br />


		<strong>Editors’ Circle—for gifts of $1,200 or more</strong><br /><br />
		Ricki Morel and John Hechinger<br />
		Upstatement<br /><br /><br />

		<strong>Reporter’s Circle—for gifts of $500 or more</strong><br /><br />
		Richard Lee Colvin<br />
		Ron Drabkin<br />
		Arthur Levine<br />
		Alison Overseth<br /><br /><br />

		<strong>Intern Circle—for gifts of $365 or more</strong><br /><br />
		Erik M. Brown<br />
		Mildred Willen<br /><br /><br />

</div>
	<hr />
<p style="font-size:20px; font-weight:bold;">Foundations</p><br /><br />
      <ul class="supporter-items l-logo-grid">

        {% for supporter in supporters %}
          <li class="grid-item">
              {% if supporter.image %}
                <div class="art-bd">
                    {% if supporter.link %}
                      <a href="{{ supporter.link }}">
                        <img src="/wp-content/themes/hechinger/static/img/supporters/{{ supporter.image }}" alt="Photo of {{ supporter.name }}">
                      </a>
                    {% else %}
                        <img src="/wp-content/themes/hechinger/static/img/supporters/{{ supporter.image }}" alt="Photo of {{ supporter.name }}">
                    {% endif %}
                </div> <!-- /art-bd -->
              {% endif %}

              <div class="txt-bd">
                <h3 class="logo-name-h">
                  <a class="logo-name-h-link" href="{{ supporter.link ? supporter.link : '' }}">{{ supporter.name }}</a>
                </h3> <!-- staff-name-h -->
              </div> <!-- /txt-bd --> 
          </li> <!-- / staff-item -->
        {% endfor %}

      </ul> <!-- /supporter-items -->
    
    </div> <!-- /l-content -->
  </div> <!-- /staff-content -->
{% endblock staff_content %}
